<OAI_EMULATION>
<!-- added by Sandip  -->
  <ENVIRONMENT_SYSTEM_CONFIG>
    <FADING>
      <LARGE_SCALE>urban</LARGE_SCALE>
      <FREE_SPACE_MODEL_PARAMETERS>
	<PATHLOSS_EXPONENT>3.67</PATHLOSS_EXPONENT>
	<PATHLOSS_0_dB>-128</PATHLOSS_0_dB><!--pathloss at 1km -->
      </FREE_SPACE_MODEL_PARAMETERS>
      <SMALL_SCALE>Rice8</SMALL_SCALE>
    </FADING>
    <WALL_PENETRATION_LOSS_dB>5</WALL_PENETRATION_LOSS_dB>
    <SYSTEM_BANDWIDTH_MB>7.68</SYSTEM_BANDWIDTH_MB>
    <UE_FREQUENCY_GHz>1.9</UE_FREQUENCY_GHz>
    <ANTENNA>
      <eNB_ANTENNA>
	<RX_NOISE_LEVEL_dB>5</RX_NOISE_LEVEL_dB>
	<NUMBER_OF_SECTORS>1</NUMBER_OF_SECTORS>
	<BEAM_WIDTH_dB>1.13</BEAM_WIDTH_dB>
	<ANTENNA_GAIN_dBi>16</ANTENNA_GAIN_dBi>
	<TX_POWER_dBm>40</TX_POWER_dBm>
      </eNB_ANTENNA>
      <UE_ANTENNA>
	<RX_NOISE_LEVEL_dB>1</RX_NOISE_LEVEL_dB>
	<ANTENNA_GAIN_dBi>5</ANTENNA_GAIN_dBi>
	<TX_POWER_dBm>20</TX_POWER_dBm>
      </UE_ANTENNA>
    </ANTENNA>
  </ENVIRONMENT_SYSTEM_CONFIG>
  
  <TOPOLOGY_CONFIG>	
    <AREA>			
      <X_m>1000</X_m>
      <Y_m>1000</Y_m>	
    </AREA>
    <MOBILITY> 
      <UE_MOBILITY>
	<RANDOM_UE_DISTRIBUTION>
	  <NUMBER_OF_NODES>3</NUMBER_OF_NODES>
	</RANDOM_UE_DISTRIBUTION> 
	<UE_MOBILITY_TYPE>TRACE</UE_MOBILITY_TYPE> 
	<TRACE_MOBILITY_FILE>handover_3UEs.tr</TRACE_MOBILITY_FILE>
	  </UE_MOBILITY>
      <eNB_MOBILITY>
	<eNB_INITIAL_DISTRIBUTION>random</eNB_INITIAL_DISTRIBUTION>
	<RANDOM_eNB_DISTRIBUTION>
	  <NUMBER_OF_CELLS>2</NUMBER_OF_CELLS>
	</RANDOM_eNB_DISTRIBUTION>
	<eNB_MOBILITY_TYPE>TRACE</eNB_MOBILITY_TYPE>	
	<TRACE_MOBILITY_FILE>handover_2eNBs.tr</TRACE_MOBILITY_FILE>   
  </eNB_MOBILITY>
    </MOBILITY>
  </TOPOLOGY_CONFIG>
  <APPLICATION_CONFIG>

<!-- BACKGROUND TRAFFIC  -->
<PREDEFINED_TRAFFIC>
      <SOURCE_ID>0</SOURCE_ID>					
      <APPLICATION_TYPE>no_predefined_traffic</APPLICATION_TYPE> 
    <BACKGROUND_TRAFFIC>disabled</BACKGROUND_TRAFFIC>    <!-- option: enabled, disabled-->
      <DESTINATION_ID>2:4</DESTINATION_ID>
</PREDEFINED_TRAFFIC> 


<!--DOWN-->
<CUSTOMIZED_TRAFFIC>  	
      <SOURCE_ID>0</SOURCE_ID>		
      <TRANSPORT_PROTOCOL>udp</TRANSPORT_PROTOCOL>  <!-- option: no_proto, tcp, udp -->
      <IP_VERSION>ipv4</IP_VERSION>    <!-- option: no_ip, ipv4, ipv6  -->
  	  <DESTINATION_ID>2:4</DESTINATION_ID>
      <IDT_DIST>uniform</IDT_DIST>  <!-- option: no_customized_traffic, uniform, gaussian, exponential, poisson, fixed, weibull, pareto, gamma, cauchy, log_normal -->
      <IDT_MIN_ms>20</IDT_MIN_ms>
      <IDT_MAX_ms>40</IDT_MAX_ms>
      <SIZE_DIST>log_normal</SIZE_DIST> <!-- option: no_customized_traffic, uniform, gaussian, exponential, poisson, fixed, weibull, pareto, gamma, cauchy, log_normal -->
      <SIZE_MIN_byte>20</SIZE_MIN_byte>
      <SIZE_MAX_byte>80.078</SIZE_MAX_byte>
      <SIZE_STANDARD_DEVIATION>10.47</SIZE_STANDARD_DEVIATION> 
 </CUSTOMIZED_TRAFFIC>  
	 

<!--UP-->
<CUSTOMIZED_TRAFFIC>	 
      <SOURCE_ID>2:4</SOURCE_ID> 		
      <TRANSPORT_PROTOCOL>tcp</TRANSPORT_PROTOCOL>  <!-- option: no_proto, tcp, udp -->
      <IP_VERSION>ipv4</IP_VERSION>   <!-- option: no_ip, ipv4, ipv6  -->
      <DESTINATION_ID>0</DESTINATION_ID>   
      <IDT_DIST>uniform</IDT_DIST> <!-- option: no_customized_traffic, uniform, gaussian, exponential, poisson, fixed, weibull, pareto, gamma, cauchy, log_normal -->
      <IDT_MIN_ms>29</IDT_MIN_ms>
      <IDT_MAX_ms>69</IDT_MAX_ms>
      <SIZE_DIST>uniform</SIZE_DIST> <!-- option: no_customized_traffic, uniform, gaussian, exponential, poisson, fixed, weibull, pareto, gamma, cauchy, log_normal -->
      <SIZE_MIN_byte>10</SIZE_MIN_byte>
      <SIZE_MAX_byte>20</SIZE_MAX_byte>
      <SIZE_STANDARD_DEVIATION>4.6</SIZE_STANDARD_DEVIATION>
 </CUSTOMIZED_TRAFFIC>
 

  </APPLICATION_CONFIG>
  <EMULATION_CONFIG>
    <EMULATION_TIME_ms>0</EMULATION_TIME_ms> <!--if0 set to infinity--> 
    <CURVE>enable</CURVE> <!-- option: enabled, disabled. If CURVE is enabled, graphes are ploted in real time (UL and DL) of WOD and throughput measurement for each packet -->
    <PERFORMANCE_METRICS>
      	<THROUGHPUT>enable</THROUGHPUT>
      	<LATENCY>enable</LATENCY>
      	<OWD_RADIO_ACESS>enable</OWD_RADIO_ACESS>  <!-- option: 0, 1. If 1 owd curve shows the one way radio access delay,else shows end to end owd -->
    </PERFORMANCE_METRICS>
    <LOG>  <!-- set the global log level -->
      <LEVEL>debug</LEVEL>1
      <INTERVAL>1</INTERVAL>
    </LOG>		
    <SEED_VALUE>1234</SEED_VALUE>	 <!-- value 0 means randomly generated by OAI -->
    
   </EMULATION_CONFIG>
 
   <PROFILE>OTG_2</PROFILE>	
</OAI_EMULATION>

