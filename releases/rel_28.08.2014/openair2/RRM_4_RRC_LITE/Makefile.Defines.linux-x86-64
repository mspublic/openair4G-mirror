CXX =		g++

CFLAGS +=	-Wall -g $(INCLUDE) -MD -D_VERSION='"$(VERSION)"'

# turn off optimization if compiling with gcc 2.9.x:
#CFLAGS +=	-O0
CFLAGS +=	-O2


CFLAGS +=	-DLINUX -m64

CFLAGS +=	-fPIC

LIBS +=		\
		-lssl -lcrypto \
		-lpthread

OBJS +=		Semaphore.o

LDFLAGSSO =	-shared \
		-Wl,-lssl \
		-Wl,-lcrypto \
		-Wl,-lxml2 \
		-Wl,-lpthread \
		-Wl,-h$(SONAME) \
		-Wl,-call_shared

