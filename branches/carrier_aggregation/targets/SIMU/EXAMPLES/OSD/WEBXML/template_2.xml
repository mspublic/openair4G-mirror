
<OAI_EMULATION>
	<ENVIRONMENT_SYSTEM_CONFIG>
		<FADING>
			<FREESPACE_PROPAGATION>
				<PATHLOSS_PARAMETERS>
					<PATHLOSS_EXPONENT>2</PATHLOSS_EXPONENT>
					<PATHLOSS_0>-50</PATHLOSS_0>
				</PATHLOSS_PARAMETERS>
			</FREESPACE_PROPAGATION>
		</FADING>

		<ANTENNA>
			<eNB_ANTENNA>
				<RX_NOISE_LEVEL>-90</RX_NOISE_LEVEL>
			</eNB_ANTENNA>

			<UE_ANTENNA>
				<RX_NOISE_LEVEL>-90</RX_NOISE_LEVEL>
			</UE_ANTENNA>
		</ANTENNA>
	</ENVIRONMENT_SYSTEM_CONFIG>

	<TOPOLOGY_CONFIG>
		<AREA>	
			<X>100</X>
			<Y>100</Y>
		</AREA>

		<MOBILITY> 
			<UE_MOBILITY>
				<UE_INITIAL_DISTRIBUTION>random</UE_INITIAL_DISTRIBUTION>
				<RANDOM_UE_DISTRIBUTION>
					<NUMBER_OF_NODES>1</NUMBER_OF_NODES>
				</RANDOM_UE_DISTRIBUTION>

				<UE_MOBILITY_TYPE>random_waypoint</UE_MOBILITY_TYPE>
			</UE_MOBILITY>

			<eNB_MOBILITY>
				<eNB_INITIAL_DISTRIBUTION>random</eNB_INITIAL_DISTRIBUTION>
				<RANDOM_eNB_DISTRIBUTION>
					<NUMBER_OF_CELLS>1</NUMBER_OF_CELLS>
				</RANDOM_eNB_DISTRIBUTION>

				<eNB_MOBILITY_TYPE>fixed</eNB_MOBILITY_TYPE>
			</eNB_MOBILITY>
		</MOBILITY>
	</TOPOLOGY_CONFIG>

	<APPLICATION_CONFIG>
		<TRAFFIC>
			<PACKET_SIZE>fixed</PACKET_SIZE>
			<FIXED_PACKET_SIZE>
				<FIXED_VALUE>100</FIXED_VALUE>
			</FIXED_PACKET_SIZE>

			<INTER_ARRIVAL_TIME>fixed</INTER_ARRIVAL_TIME>
			<FIXED_INTER_ARRIVAL_TIME>
				<FIXED_VALUE>10</FIXED_VALUE>
			</FIXED_INTER_ARRIVAL_TIME>
		</TRAFFIC>
	</APPLICATION_CONFIG>

	<EMULATION_CONFIG>
		<EMULATION_TIME>10000</EMULATION_TIME>

		<PERFORMANCE>
			<METRICS>
				<THROUGHPUT>1</THROUGHPUT>
			</METRICS>
			<LOG_EMU>
				<DEBUG>1</DEBUG>
				<INFO>1</INFO>
			</LOG_EMU>
		</PERFORMANCE>
	</EMULATION_CONFIG>
</OAI_EMULATION>

