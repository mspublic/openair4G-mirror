# start_user script : This script launches the 3-node user-space emulation from the CH machine (Machine0)

# put the name or IP address of Machine1 here
export Machine0=smell 
export Machine1=hearing 
export Machine2=meucci

# put the path to openair2 here (same on both machines)
export OPENAIR2_DIR=/homes/anouar/openair2

#sudo xterm -T "CH1" -hold -e sh start_ch1_user  &

sudo xterm -T "CH2" -hold -e ssh root@$Machine1 $OPENAIR2_DIR/EXAMPLES/ETH_EMUL_2CHS_1NODE/start_ch2_user &
sudo xterm -T "MR" -hold -e ssh root@$Machine2 $OPENAIR2_DIR/EXAMPLES/ETH_EMUL_2CHS_1NODE/start_mr_user &

./start_ch1_user 