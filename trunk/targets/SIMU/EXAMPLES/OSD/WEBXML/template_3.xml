<!-- how to configure: talk about the convention, range  -->
<OAI_EMULATION>
	<ENVIRONMENT_SYSTEM_CONFIG>
		<FADING>
			<LARGE_SCALE>free_space</LARGE_SCALE>
			<FREE_SPACE_MODEL_PARAMETERS>
				<PATHLOSS_EXPONENT>2</PATHLOSS_EXPONENT>
				<PATHLOSS_0_dB>-50</PATHLOSS_0_dB>
			</FREE_SPACE_MODEL_PARAMETERS>
		</FADING>

		<WALL_PENETRATION_LOSS>0</WALL_PENETRATION_LOSS>

		<SYSTEM_BANDWIDTH>5</SYSTEM_BANDWIDTH>

		<SYSTEM_FREQUENCY>1.9</SYSTEM_FREQUENCY>

		<ANTENNA>
			<eNB_ANTENNA>
				<RX_NOISE_LEVEL>-90</RX_NOISE_LEVEL>
			</eNB_ANTENNA>

			<UE_ANTENNA>
				<RX_NOISE_LEVEL>-90</RX_NOISE_LEVEL>
			</UE_ANTENNA>
		</ANTENNA>
	</ENVIRONMENT_SYSTEM_CONFIG>

	<TOPOLOGY_CONFIG>
		<AREA>	
			<X_km>100</X_km>
			<Y_km>100</Y_km>
		</AREA>

		<NETWORK_TYPE>homogeneous</NETWORK_TYPE>

		<CELL_TYPE>macrocell</CELL_TYPE>

		<MOBILITY> 
			<UE_MOBILITY>
				<UE_INITIAL_DISTRIBUTION>random</UE_INITIAL_DISTRIBUTION> <!-- options, range -->
				<RANDOM_UE_DISTRIBUTION>
					<NUMBER_OF_NODES>1</NUMBER_OF_NODES>
				</RANDOM_UE_DISTRIBUTION>

				<UE_MOBILITY_TYPE>STATIC</UE_MOBILITY_TYPE>
			</UE_MOBILITY>

			<eNB_MOBILITY>
				<eNB_INITIAL_DISTRIBUTION>random</eNB_INITIAL_DISTRIBUTION>
				<RANDOM_eNB_DISTRIBUTION>
					<NUMBER_OF_CELLS>1</NUMBER_OF_CELLS>
				</RANDOM_eNB_DISTRIBUTION>

				<eNB_MOBILITY_TYPE>STATIC</eNB_MOBILITY_TYPE>
			</eNB_MOBILITY>
		</MOBILITY>
	</TOPOLOGY_CONFIG>

	<APPLICATION_CONFIG>
		<TRAFFIC>
			<PACKET_SIZE>fixed</PACKET_SIZE>
			<FIXED_PACKET_SIZE>
				<FIXED_VALUE_byte>100</FIXED_VALUE_byte>
			</FIXED_PACKET_SIZE>

			<INTER_ARRIVAL_TIME>fixed</INTER_ARRIVAL_TIME>
			<FIXED_INTER_ARRIVAL_TIME>
				<FIXED_VALUE_byte>10</FIXED_VALUE_byte>
			</FIXED_INTER_ARRIVAL_TIME>
		</TRAFFIC>
	</APPLICATION_CONFIG>

	<EMULATION_CONFIG>
		<EMULATION_TIME_ms>40</EMULATION_TIME_ms>

		<PERFORMANCE>
			<METRICS>
				<THROUGHPUT>1</THROUGHPUT>
			</METRICS>

			<LAYER>
				<MAC>1</MAC>
			</LAYER>

			<LOG_EMU>
				<DEBUG>1</DEBUG>
				<INFO>1</INFO>
			</LOG_EMU>
		</PERFORMANCE>
	</EMULATION_CONFIG>

	<PROFILE>EURECOM</PROFILE>	
</OAI_EMULATION>

