<OAI_EMULATION>
  <TOPOLOGY_CONFIG>	
    <AREA>			
      <X_m>500</X_m>
      <Y_m>500</Y_m>	
    </AREA>
    <MOBILITY> 
      <UE_MOBILITY>
	<RANDOM_UE_DISTRIBUTION>
	  <NUMBER_OF_NODES>3</NUMBER_OF_NODES>
	</RANDOM_UE_DISTRIBUTION>
	<UE_MOBILITY_TYPE>STATIC</UE_MOBILITY_TYPE>  <!-- STATIC --> 
      </UE_MOBILITY>
      <eNB_MOBILITY>
	<eNB_INITIAL_DISTRIBUTION>random</eNB_INITIAL_DISTRIBUTION>
	<RANDOM_eNB_DISTRIBUTION>
	  <NUMBER_OF_CELLS>1</NUMBER_OF_CELLS>
	</RANDOM_eNB_DISTRIBUTION>
	<eNB_MOBILITY_TYPE>STATIC</eNB_MOBILITY_TYPE>
      </eNB_MOBILITY>
    </MOBILITY>
  </TOPOLOGY_CONFIG>
  <APPLICATION_CONFIG>

<!-- BACKGROUND TRAFFIC-->
<PREDEFINED_TRAFFIC>
      <SOURCE_ID>0</SOURCE_ID>					
      <APPLICATION_TYPE>no_predefined_traffic</APPLICATION_TYPE> <!-- for background traffic we should not select an application type, use only: no_predefined_traffic-->
    <BACKGROUND_TRAFFIC>enable</BACKGROUND_TRAFFIC>   <!-- option: enable, disable -->
      <DESTINATION_ID>1:3</DESTINATION_ID>
</PREDEFINED_TRAFFIC>

<!--DOWN-->
<CUSTOMIZED_TRAFFIC>  	
       <SOURCE_ID>0</SOURCE_ID>		
      <TRANSPORT_PROTOCOL>tcp</TRANSPORT_PROTOCOL>  <!-- option: no_proto, tcp, udp -->
      <IP_VERSION>ipv4</IP_VERSION>    <!-- option: no_ip, ipv4, ipv6  -->
  <DESTINATION_ID>1:3</DESTINATION_ID>
      <IDT_DIST>uniform</IDT_DIST>  <!-- option: no_customized_traffic, uniform, gaussian, exponential, poisson, fixed, weibull, pareto, gamma, cauchy, log_normal -->
      <IDT_MIN_ms>41</IDT_MIN_ms>
      <IDT_MAX_ms>47</IDT_MAX_ms>
      <SIZE_DIST>log_normal</SIZE_DIST> <!-- option: no_customized_traffic, uniform, gaussian, exponential, poisson, fixed, weibull, pareto, gamma, cauchy, log_normal -->
      <SIZE_MIN_byte>2</SIZE_MIN_byte>
      <SIZE_MAX_byte>8.078</SIZE_MAX_byte>
      <SIZE_STANDARD_DEVIATION>0.47</SIZE_STANDARD_DEVIATION> 
 </CUSTOMIZED_TRAFFIC>  
	 
<!--UP-->
<CUSTOMIZED_TRAFFIC>	 
      <SOURCE_ID>1:3</SOURCE_ID> 		
      <TRANSPORT_PROTOCOL>tcp</TRANSPORT_PROTOCOL>  <!-- option: no_proto, tcp, udp -->
      <IP_VERSION>ipv4</IP_VERSION>   <!-- option: no_ip, ipv4, ipv6  -->
      <DESTINATION_ID>0</DESTINATION_ID>   
      <IDT_DIST>uniform</IDT_DIST> <!-- option: no_customized_traffic, uniform, gaussian, exponential, poisson, fixed, weibull, pareto, gamma, cauchy, log_normal -->
      <IDT_MIN_ms>69</IDT_MIN_ms>
      <IDT_MAX_ms>103</IDT_MAX_ms>
      <SIZE_DIST>gaussian</SIZE_DIST> <!-- option: no_customized_traffic, uniform, gaussian, exponential, poisson, fixed, weibull, pareto, gamma, cauchy, log_normal -->
      <SIZE_MIN_byte>100</SIZE_MIN_byte>
      <SIZE_MAX_byte>200</SIZE_MAX_byte>
      <SIZE_STANDARD_DEVIATION>4.6</SIZE_STANDARD_DEVIATION>
 </CUSTOMIZED_TRAFFIC>

  </APPLICATION_CONFIG>
  
  <EMULATION_CONFIG>
    <EMULATION_TIME_ms>60000</EMULATION_TIME_ms> <!--if0 set to infinity--> 
    <CURVE>enabled</CURVE> <!-- option: enabled, disabled. If CURVE is enabled, graphes are ploted in real time (UL and DL) of WOD and throughput measurement for each packet -->
    <PERFORMANCE_METRICS>
      	<THROUGHPUT>0</THROUGHPUT>
      	<LATENCY>0</LATENCY>
      	<OWD_RADIO_ACESS>1</OWD_RADIO_ACESS>  <!-- option: 0, 1. If 1 owd curve shows the one way radio access delay,else shows end to end owd -->
    </PERFORMANCE_METRICS>
    <LOG>  <!-- set the global log level -->
      <LEVEL>info</LEVEL>
      <INTERVAL>1</INTERVAL>
    </LOG>		
    <SEED_VALUE>1234</SEED_VALUE>	 <!-- value 0 means randomly generated by OAI -->
    
   </EMULATION_CONFIG>
 
   <PROFILE>OTG_2</PROFILE>	
</OAI_EMULATION>

