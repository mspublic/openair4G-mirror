
<OAI_EMULATION>
	<TOPOLOGY_CONFIG>
		<AREA>	
			<X>100</X>
			<Y>100</Y>
		</AREA>

		<NETWORK_TYPE>homogeneous</NETWORK_TYPE>

		<CELL_TYPE>macrocell</CELL_TYPE>

		<MOBILITY> 
			<UE_MOBILITY>
				<UE_INITIAL_DISTRIBUTION>random</UE_INITIAL_DISTRIBUTION>
				<RANDOM_UE_DISTRIBUTION>
					<NUMBER_OF_NODES>1</NUMBER_OF_NODES>
				</RANDOM_UE_DISTRIBUTION>

				<UE_MOBILITY_TYPE>random_waypoint</UE_MOBILITY_TYPE>

				<UE_MOVING_DYNAMICS>
					<MIN_SPEED>0.01</MIN_SPEED>
					<MAX_SPEED>10</MAX_SPEED>
					<MIN_PAUSE_TIME>0.01</MIN_PAUSE_TIME>
					<MAX_PAUSE_TIME>10</MAX_PAUSE_TIME>
					<MIN_JOURNEY_TIME>0.01</MIN_JOURNEY_TIME>
					<MAX_JOURNEY_TIME>10</MAX_JOURNEY_TIME>
				</UE_MOVING_DYNAMICS>
			</UE_MOBILITY>

			<eNB_MOBILITY>
				<eNB_INITIAL_DISTRIBUTION>random</eNB_INITIAL_DISTRIBUTION>
				<RANDOM_eNB_DISTRIBUTION>
					<NUMBER_OF_CELLS>1</NUMBER_OF_CELLS>
				</RANDOM_eNB_DISTRIBUTION>

				<eNB_MOBILITY_TYPE>fixed</eNB_MOBILITY_TYPE>
			</eNB_MOBILITY>
		</MOBILITY>
	</TOPOLOGY_CONFIG>

	<EMULATION_CONFIG>
		<EMULATION_TIME>10000</EMULATION_TIME>
	</EMULATION_CONFIG>

	<PROFILE>EURECOM</PROFILE>	
</OAI_EMULATION>
