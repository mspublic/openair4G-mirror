#!/bin/sh
# route entity ucf-file device effort bitgen
#         $1      $2      $3     $4     $5
banner="############################################################################################"
echo $banner; echo "######################################### ngdbuild #########################################"; echo $banner
echo "Executing command: ngdbuild $1.ngc -aul -uc $2 -p $3 -sd $6"
ngdbuild $1.ngc -aul -uc $2 -p $3 -sd $6
echo $banner; echo "#########################################   map    #########################################"; echo $banner
echo "Executing command: map -timing -ol $4 -pr b -p $3 $1"
map -timing -ol $4 -pr b -p $3 $1
echo $banner; echo "#########################################   par    #########################################"; echo $banner
echo "Executing command: par -ol $4 -w $1 $1.ncd"
par -ol $4 -w $1 $1.ncd
echo $banner; echo "##########################################  trce  ##########################################"; echo $banner
echo "Executing command: trce -v 25 $1.ncd $1.pcf"
trce -v 25 $1.ncd $1.pcf 
echo $banner; echo "########################################## bitgen ##########################################"; echo $banner;
echo "Executing command: bitgen $1 -l -m -w -d -f $5"
bitgen $1 -l -m -w -d -f $5
